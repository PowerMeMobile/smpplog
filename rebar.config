{erl_opts, [
	warn_export_all,
	warn_missing_spec,
	%warnings_as_errors,
	debug_info
]}.
{xref_checks, [
	undefined_function_calls,
	deprecated_function_calls,
	locals_not_used
]}.
{sub_dirs, ["rel"]}.
{deps, [
	{getopt, ".*", {git, "git://github.com/jcomellas/getopt.git", {tag, "v0.7.1"}}},
    {oserl, ".*", {git, "git://github.com/PowerMeMobile/oserl.git", {branch, "master"}}},
    {common_lib, "3.3.4", {git, "git://github.com/PowerMeMobile/common_lib.git", {branch, "master"}}},
	{iconverl, "1.1", {git, "git://github.com/iamaleksey/iconverl.git", {branch, "master"}}},

	{sync, ".*", {git, "git://github.com/ten0s/sync.git", {branch, "dk_support_release"}}}
]}.
{eunit_opts, [verbose]}.
{cover_enabled, true}.
{cover_print_enabled, true}.
